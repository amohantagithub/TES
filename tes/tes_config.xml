<!--
Configuration file for temperature emissivity separtation methods.
-->

<config>

    <method name="fixed_window">

        <variation_tolerance>10</variation_tolerance>

        <temperature_limits>
            <lower>260</lower>
            <upper>360</upper>
        </temperature_limits>

        <wavelength_window>
            <lower>8.12</lower>
            <upper>8.6</upper>
        </wavelength_window>

    </method>

    <method name="moving_window">

        <variation_tolerance>10</variation_tolerance>

        <temperature_limits>
            <lower>260</lower>
            <upper>360</upper>
        </temperature_limits>

        <wavelength_limits>
            <lower>8.0</lower>
            <upper>14.0</upper>
        </wavelength_limits>

        <window_width>0.2</window_width>

    </method>

    <method name="multiple_fixed_window">

        <variation_tolerance>10</variation_tolerance>

        <temperature_limits>
            <lower>260</lower>
            <upper>360</upper>
        </temperature_limits>

        <wavelength_windows>
            <lower>8.12,14.0</lower>
            <upper>8.6,14.23</upper>
        </wavelength_windows>

    </method>

    <!--
    Multiple moving window method not currently implemented.

    <method name="multiple_moving_window">

        <variation_tolerance>10</variation_tolerance>

        <temperature_limits>
            <lower>260</lower>
            <upper>360</upper>
        </temperature_limits>

        <wavelength_limits>
            <lower>8.0</lower>
            <upper>14.0</upper>
        </wavelength_limits>

	<window_widths>0.2,0.2</window_widths>

    </method>

    -->

</config>
